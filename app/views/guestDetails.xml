<Alloy>
	<Window id="window" class="container">
		<ScrollView scrollType="vertical" id="labelsView" layout="vertical" height="Ti.UI.FILL">
			<View id="topInfo" layout="vertical">
				<Label id="name"></Label>
				
				<View id="commentContainer">
					<Label id="comment"></Label>
				</View>
				
				<Label id="date"></Label>
				
				<Label id="contactLabel">CONTACT</Label>
			</View>
			
			<View id="contactContainer" layout="vertical"></View>
			
		</ScrollView>
		
		<Menu id="menu" platform="android">
			<MenuItem id="removeSignature"
				title="Remove"
				onClick="removeSignature"
				showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM"/>
		</Menu>
	</Window>
</Alloy>